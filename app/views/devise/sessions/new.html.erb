<div id="main">
	<div class="login" id="login_bg">
		<div id="login" class="large">
			<h2>Sign in</h2>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div><br />
			  <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>

			  <div><br />
			  <%= f.password_field :password, :placeholder => "Password"%></div>

			  <% if devise_mapping.rememberable? -%>
			    <div id="remember_me" ><%= f.check_box :remember_me %> </div> <%= f.label :remember_me %>
			  <% end -%>

			  <div><%= f.submit "Sign in", :class => "button small" %></div>
			<% end %>
		</div>
	</div>
	<%= render "devise/shared/links" %>
</div>

